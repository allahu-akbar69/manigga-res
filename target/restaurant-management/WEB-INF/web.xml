<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="true">

    <display-name>Restaurant Management System</display-name>
    <description>Restaurant Management System with Customer Search and Management Statistics modules</description>

    <!-- Welcome file list -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Error pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
    </error-page>
    
    <error-page>
        <error-code>500</error-code>
        <location>/error/500.jsp</location>
    </error-page>

    <!-- Session configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- Security disabled for development to avoid 403 on /management/* -->
    <!-- Add proper authentication before enabling in production -->

    <!-- Servlet Mappings -->
    <servlet>
        <servlet-name>CustomerSearchServlet</servlet-name>
        <servlet-class>servlet.CustomerSearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerSearchServlet</servlet-name>
        <url-pattern>/customer/search</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DishDetailServlet</servlet-name>
        <servlet-class>servlet.DishDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DishDetailServlet</servlet-name>
        <url-pattern>/customer/dish-detail</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ManagementStatsServlet</servlet-name>
        <servlet-class>servlet.ManagementStatsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManagementStatsServlet</servlet-name>
        <url-pattern>/management/dish-stats</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OrderListServlet</servlet-name>
        <servlet-class>servlet.OrderListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderListServlet</servlet-name>
        <url-pattern>/management/order-list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OrderDetailServlet</servlet-name>
        <servlet-class>servlet.OrderDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderDetailServlet</servlet-name>
        <url-pattern>/management/order-detail</url-pattern>
    </servlet-mapping>

    

    <!-- Character encoding filter -->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>ignore</param-name>
            <param-value>false</param-value>
        </init-param>
    </filter>
    
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>




